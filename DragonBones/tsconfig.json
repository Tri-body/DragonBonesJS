{
	"compilerOptions": {
		"watch": false,
		"sourceMap": false,
		"declaration": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
		"target": "es5",
    // "outFile": "out/dragonBones.js",
    "outDir": "build",
    "module": "commonjs",
		"lib": [
			"es5",
			"dom",
			"es2015.promise"
		]
	},
	"exclude": [
		"node_modules"
  ],
  "files": [
    "src/dragonBones/index.ts"
  ]
}